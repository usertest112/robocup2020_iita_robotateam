#pragma config(Sensor, S1,     ultra,          sensorEV3_Ultrasonic)
#pragma config(Sensor, S2,     izq,            sensorEV3_Color)
#pragma config(Sensor, S3,     der,            sensorEV3_Color)
#pragma config(Motor,  motorB,          derecha,       tmotorEV3_Large, PIDControl, driveRight, encoder)
#pragma config(Motor,  motorD,          izquierda,     tmotorEV3_Large, PIDControl, driveLeft, encoder)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{
	sleep(3000);
int luzizq = getColorReflected(S2);
int luzder = getColorReflected(S3);
int  dist = getUSDistance(S1) ;
if (dist < 10)
	{
 
turnLeft ( -1.4 , rotations ,50);
  backward ( -1.7 , rotations ,50);
 turnRight ( -1.4 , rotations ,50);
 backward ( 3 , rotations ,50);
  turnRight ( -1.4 , rotations ,50);

}
repeatUntil(luzizq < 15 & luzder < 15 ) 
{
setMotorSpeed (motorD , -50);
setMotorSpeed (motorB, -50);
}
 sleep(1000);
 
 turnLeft ( 1.4 , rotations ,50);
} 
